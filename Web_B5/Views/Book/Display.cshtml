@model Web_B5.Models.Book

@{
    ViewData["Title"] = "Chi Tiết Sách";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Web_B5</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .sidebar {
            border: 1px solid #dee2e6;
            padding: 15px;
            margin-right: 15px;
        }
        .main-content {
             border: 1px solid #dee2e6;
             padding: 15px;
        }
    </style>
</head>
<body>
    <header class="bg-dark text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <a href="/" class="text-white text-decoration-none h5 mb-0">Trang Chủ</a>
            <div>
                <a href="#" class="text-white text-decoration-none me-3">Đăng Ký</a>
                <a href="#" class="text-white text-decoration-none me-3">Đăng nhập</a>
                <a href="#" class="text-white text-decoration-none">Giỏ hàng</a>
            </div>
        </div>
    </header>

    <div class="container py-4">
        <div class="row">
            <!-- Sidebar -->
            

            <!-- Main Content -->
            <div class="col-md-9">
                <div class="main-content">
                    <h4>THÔNG TIN CHI TIẾT SÁCH</h4>
                    <hr />
                    <div class="row">
                        <!-- Hình ảnh sách -->
                        <div class="col-md-4 text-center">
                            <img src="@Url.Content(Model.Image ?? "~/images/default-book.jpg")"
                                 alt="Ảnh sách"
                                 class="img-fluid rounded shadow-sm border"
                                 style="max-height: 300px; object-fit: cover;" />
                        </div>

                        <!-- Nội dung chi tiết -->
                        <div class="col-md-8">
                            <h5 class="fw-bold text-danger">Tên sách: @Model.Title</h5>
                            <p class="fw-bold text-danger">Tác giả: @Model.Author</p>

                            <div class="mb-3">
                                <h6>Mô tả:</h6>
                                <p class="text-muted" style="text-align: justify;">@Model.Description</p>
                            </div>

                            <p class="fw-bold text-danger">Giá bán: @Model.Price.ToString("N0") VNĐ</p>

                            <button type="button" class="btn btn-primary mb-3">Đặt mua</button>

                            @* Existing Edit, Delete, Back buttons - kept for functionality *@
                            <div class="d-flex gap-2">
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@Model.BookId">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@Model.BookId" onclick="return confirm('Bạn có chắc chắn muốn xóa không?');">
                                    <i class="bi bi-trash3"></i> Xóa
                                </a>
                                <a class="btn btn-secondary btn-sm" asp-action="Index">
                                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            &copy; 2023 - Lập trình Web
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
